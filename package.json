{
  "name": "marianska-rezervace",
  "version": "1.0.0",
  "description": "Rezervační systém Chata Mariánská",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prepare": "husky",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "lint:check": "eslint .",
    "format:check": "prettier --check .",
    "duplicates": "jscpd --config .jscpd.json .",
    "validate:json": "find . -name '*.json' -not -path './node_modules/*' -not -path './.git/*' | xargs -I {} jsonlint {}",
    "pre-commit": "npm run lint:check && npm run format:check && npm run duplicates"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "jsonlint": "^1.6.3",
    "lint-staged": "^16.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
