{
  "name": "marianska-rezervace",
  "version": "1.0.0",
  "description": "Rezervační systém Chata Mariánská",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "predev": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "dev": "nodemon server.js",
    "prepare": "husky",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "lint:check": "eslint .",
    "format:check": "prettier --check .",
    "duplicates": "jscpd --config .jscpd.json .",
    "validate:json": "find . -name '*.json' -not -path './node_modules/*' -not -path './.git/*' | xargs -I {} jsonlint {}",
    "pre-commit": "npm run lint:check && npm run format:check && npm run duplicates",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "jest tests/backend",
    "test:unit": "jest tests/unit",
    "test:frontend": "jest tests/frontend",
    "test:integration": "jest tests/integration",
    "test:all": "npm run test:backend && npm run test:unit && npm run test:frontend && npm run test:integration",
    "test:verbose": "jest --verbose"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.48.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jscpd": "^4.0.5",
    "jsonlint": "^1.6.3",
    "lint-staged": "^16.2.1",
    "nodemon": "^3.1.10",
    "playwright": "^1.48.0",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0"
  }
}
